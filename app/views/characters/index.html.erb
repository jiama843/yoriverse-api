<h1> Sample view for characters </h1>

<%= link_to 'Create character', new_character_path %>

<ul>
    <% @characters.each do |c| %>
        <!-- <li><%# link_to c.traits, character_path(c) %></li> -->
        <li>
            <%= "#{c.first_name} #{c.last_name}" %> -
            <%= link_to "remove", character_path(c), method: :delete, data: { confirm: "Really?" } %>
        </li>
    <% end %>
</ul>